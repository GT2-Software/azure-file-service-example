# STAGE 1 compile and buid war
FROM maven:3.9-eclipse-temurin-11-focal AS maven
WORKDIR /app

COPY src ./src
COPY pom.xml ./

# compilado del war
RUN mvn clean package

# STAGE 2 deploy war
FROM payara/micro:5.2022.5
COPY --from=maven /app/target/azure-storage-service-1.1.war $DEPLOY_DIR 
CMD ["--deploymentDir","/opt/payara/deployments", "--port", "8080"]
